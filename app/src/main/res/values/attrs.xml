<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--手势锁自定义控件使用-->
    <declare-styleable name="GestureLock">
        <attr name ="noneInnerColor" format="color"/>
        <attr name ="selectingColor" format="color"/>
        <attr name ="selectedColor" format="color"/>
        <attr name ="noneOuterColor" format="color"/>
        <attr name = "sideCount" format="integer"/>
        <attr name = "tryTimes" format="integer"/>
    </declare-styleable>

    <!--圆形SeekBar使用-->
    <declare-styleable name="CircleSeekBar">
        <attr name="radius" format="dimension"/>
        <attr name="reach_stroke_width" format="dimension"/>
        <attr name="unreach_stroke_width" format="dimension"/>
        <attr name="reach_color" format="color"/>
        <attr name="unreach_color" format="color"/>
        <attr name="padding" format="dimension"/>
    </declare-styleable>

    <!--步骤进度条-->
    <declare-styleable name="StepProgressView">
        <attr name ="circle_radius" format="dimension"/>
        <attr name ="step_counts" format="integer"/>
        <attr name ="padding_left" format="dimension"/>
        <attr name ="padding_right" format="dimension"/>
        <attr name ="padding_top" format="dimension"/>
        <attr name ="padding_bottom" format="dimension"/>
        <attr name ="reached_color" format="color"/>
        <attr name ="cur_color" format="color"/>
        <attr name ="bg_color" format="color"/>
        <attr name ="stroke_width" format="dimension"/>
        <attr name ="auto_adapte" format="boolean"/>
        <attr name ="text_size" format="dimension"/>
    </declare-styleable>
</resources>